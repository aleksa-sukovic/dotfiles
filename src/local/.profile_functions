#!/bin/bash

dev()
{
    cd /work/source/
	if [ "$#" -gt 0 ]; then
		eval "$@"
	fi
}

home()
{
    cd ~

    if [ "$#" -gt 0 ]; then
        eval "$@"
    fi
}

ip_local()
{
	myIP="$(ipconfig getifaddr en0)"
	echo "Local IP: $myIP"
}

ip_public()
{
	myIP="$(dig +short myip.opendns.com @resolver1.opendns.com)"
	echo "Public IP: $myIP"
}

ssh_lws()
{
	ssh asukovic@192.168.88.3
}

wake_lws-local()
{
	wakeonlan 04:42:1a:97:2d:fa
}

wake_lws()
{
	  ssh wol@192.168.77.1 '/tool wol interface=bridge-lan mac=04:42:1a:97:2d:fa'
}
